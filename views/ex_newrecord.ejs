  <body class= 'container p-3'>
    <%- include('nav') %> 
    <h1 class = "display-4"><%= title %></h1>
    <p class='h4'><%- message %></p><br>
    <form method="POST" action="/detail">
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-4">
                    <label for="text">年</label> 
                    <input type="text" class='form-control' name='year' id='year' value="<%- year %>" required>
                </div>
                <div class="form-group col-4">
                    <label for="text">月</label> 
                    <input type="text" class='form-control' name='month' id='month' value="<%- month %>" required>
                </div>
                <div class="form-group col-4">
                    <label for="text">日</label> 
                    <input type="text" class='form-control' name='day' id='day' value="<%- day %>" required>
                </div>
                <div class="form-group col-4">
                    <label for='time'>時刻 ※hhmm</label> 
                    <input type="text" class='form-control' name='time'  id='time' required>
                    <!--<input type="datetime-local" class='form-control' name='date'  id='date' value="" required>-->  
                </div>
            </div>
        </div>
        <div class='form-group'>
            <div class='form-row'>
                <div class="form-group col-4">
                    <label for='code_name'>勘定科目</label> 
                    <input type="text" class='form-control' name='code_name' id='code_name' value="<%- code_name %>" required placeholder="必須">
                </div>
                <div class="form-group col-4">
                    <label for='summary'>摘要</label> 
                    <input type="text" class='form-control' name='summary' id='summary' value='<%- summary %>' required placeholder="必須">
                </div>
            </div>
            <div class="form-group">
                <label for='payee'>支払先</label>
                <input type="text" class='form-control' name='payee' id='payee' value='<%- payee %>' placeholder="必須">
            </div>
            <input type="submit" id='search' value="検索" class="btn btn-danger" name='search'>
            <!--<button onclick="searchPrice()" class="btn btn-primary">調べよう</button>-->
        </div>
        <div class='form-group form-inline'>
            <label for='amount'>金額</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" id='amount' name='amount' class="form-control" <%- amount %>　placeholder="必須">
            </div>
        </div>
        <div class='form-group form-inline'>
            <label for='job_no'>ジョブコード</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" class='form-control' id='job_no' name='job_no' >
            </div>
        </div>
        <div class='form-group form-inline'>
            <label for='remarks'>備考</label> 
            <div class="col col-md-9 col-sm-8">
            <input type="text" class='form-control' id='remarks' name='remarks' value='<%- moveDate%>' placeholder='<%- moveDate2%>'>
            </div>
        </div>
        <!-- <input type="hidden" name="regularly" value="0"> -->
        <div>
            <input type="button" id="btn-return" value="戻る" class="btn btn-primary" onclick="location.href='http://localhost:3000'">
            <!-- <button class="btn btn-primary" id="btn-return" name='return' onclick="location.href='http:/localhost:3000'">戻る</button> -->
            <input type="hidden" name="flg" value="<%- flg %> ">
            <input type="submit" id="btn-save" value="保存" class="btn btn-primary" name='save'>
            <!-- <input type="submit" id="btn-delete" value="削除" class="btn btn-primary" name='delete'> -->
        </div>
        <input type="hidden" name="id" value="<%- id%>">
    </form>
    <script type="text/javascript">

        'use strict'

        //戻るボタンでindex.jsに遷移
        // function move() {
        //     location.href = 'http://localhost:3000';
        // };
