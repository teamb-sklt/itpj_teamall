<%- include('partials/header3')%>

<nav class="navbar">
  <ul class="top">
    <li><a href="/remind_ex">リマインド画面</a></li>
    <h3>承認画面</h3>
  </ul>
  <ul class="bottom">
    <h3>経費</h3>
    <li><a href="/approve_tr">交通費</a></li>
